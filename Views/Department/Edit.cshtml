@model MVC_Demo.Models.Departments
<script>
        function save() {
            toastr.success('abc has been updated', 'Department Details for');
            setTimeout(nav, 2000);
        }

        function nav() {
            window.location.href = '@Url.Action("Index", "Department")';
        }

</script>






<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="page-title">Edit Department Details</h2>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DashBoard")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Department")">Department</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Edit</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row" style="margin:10px 0 0 0">
        <div class="col-12">
            <div class="card">
                <form class="form-horizontal">
                    <div class="card-body">
                        <h4 class="card-title">Department Info</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">

                            <label for="lname" class="col-sm-3 text-end control-label col-form-label">
                                Department No
                            </label>
                            <div class="col-sm-5">
                                @Html.EditorFor(model => model.DeptId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">

                            <label for="lname" class="col-sm-3 text-end control-label col-form-label">
                                Department Name
                            </label>
                            <div class="col-sm-5">
                                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                            </div>
                        </div>


                    </div>
                    <br />
                    <div class="form-group row align-content-between">
                        <div class="card-body text-center">
                            <button id="save" type="submit" class=" col-sm-2 btn btn-info btn-rounded" style="margin:0px 20px 0px 0px">Update</button>
                            <a class="col-sm-2  btn btn-warning btn-rounded " href="@Url.Action("Index", "Department")" style="color:black">Go Back</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

}






<script src="@Url.Content("~/Content/assets/libs/jquery/dist/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js")" type="text/javascript"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}