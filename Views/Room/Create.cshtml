@model MVC_Demo.Models.Room

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="page-title">Create Room</h2>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DashBoard")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Room")">Room</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row" style="margin:10px 0 0 0">
        <div class="col-12">
            <div class="card">
                <form class="form-horizontal">
                    <div class="card-body">
                        <h4 class="card-title">Room Info</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Room_Specification, "Room Specification", htmlAttributes: new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-5">
                                @Html.EditorFor(model => model.Room_Specification, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Room_Specification, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.Price, "Price", htmlAttributes: new { @class = "col-sm-3 text-end control-label col-form-label" })
                            <div class="col-sm-5">
                                <div class="input-group">
                                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control aria-describedby = " + "basic - addon2" } })

                                    <div class="input-group-append">
                                        <span class="input-group-text" id="basic-addon2">₹</span>
                                    </div>
                                </div>
                                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                    </div>
                    <br />
                    <div class="form-group row align-content-between">
                        <div class="card-body text-center">
                            <button type="submit" id="save" class=" col-sm-2 btn btn-info btn-rounded" style="margin:0px 20px 0px 0px">Save</button>
                            <button type="reset" class=" col-sm-2 btn btn-secondary btn-rounded " style="margin:0px 20px 0px 0px">Clear</button>
                            <a class="col-sm-2  btn btn-warning btn-rounded " href="@Url.Action("Index", "Room")" style="color:black">Go Back</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
}
<script>

    function save() {
        toastr.success('abc has been created', 'Room Details for');
        setTimeout(nav, 2000);
    }

    function nav() {
        window.location.href = '@Url.Action("Index", "Room")';
    }
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}