@model MVC_Demo.Models.Outpatients

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="page-title">Create OutPatient</h2>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DashBoard")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","OutPatient")">OutPatient</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Create</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row" style="margin:10px 0 0 0">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal">
                <div class="card-body">
                    <h4 class="card-title">OutPatient Info</h4>
                    <div class="form-group row">
                        <label for="fname"
                               class="col-sm-3 text-end control-label col-form-label">Patient Name</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Pid, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-end control-label col-form-label">
                            Doctor Name
                        </label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Doctor_Id, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>

                    <div class="form-group row">
                        <label for="lname"
                               class="col-sm-3 text-end control-label col-form-label">Test Date</label>
                        <div class="col-sm-5">
                            <div class="input-group ">

                                @Html.EditorFor(model => model.Treatment_Date, new { htmlAttributes = new { @class = "form-control", id = "AdmissionDate", placeholder = "mm/dd/yyyy" } })
                                <div class="input-group-append">
                                    <span class="input-group-text h-100"><i class="fa fa-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <br />
                <div class="form-group row align-content-between">
                    <div class="card-body text-center">
                        <a id="save" onclick="save()" class=" col-sm-2 btn btn-info btn-rounded" style="margin:0px 20px 0px 0px">Save</a>
                        <button type="reset" class=" col-sm-2 btn btn-secondary btn-rounded " style="margin:0px 20px 0px 20px">Clear</button>
                        <a class="col-sm-2  btn btn-warning btn-rounded " href="@Url.Action("Index","OutPatient")" style="color:black">Go Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/assets/libs/jquery/dist/jquery.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/assets/libs/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js")" type="text/javascript"></script>
<script>
    jQuery('#AdmissionDate').datepicker({
        autoclose: true,
        todayHighlight: true
    });
    function save() {
        toastr.success('abc has been created', 'OutPatient Details for');
        setTimeout(nav, 2000);
    }

    function nav() {
        window.location.href = '@Url.Action("Index", "OutPatient")';
    }
</script>

