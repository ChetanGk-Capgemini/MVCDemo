@model MVC_Demo.Models.Patients

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h2 class="page-title">View Patient</h2>
            <div class="ms-auto text-end">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","DashBoard")">Home</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Index","Patient")">Patient</a></li>
                        <li class="breadcrumb-item active" aria-current="page">View</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="row" style="margin:10px 0 0 0">
    <div class="col-12">
        <div class="card">
            <form class="form-horizontal">
                <div class="card-body">
                    <h4 class="card-title">Patient Info</h4>
                    <div class="form-group row">
                        <label for="fname"
                               class="col-sm-3 text-end control-label col-form-label">Patient Name</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control " } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname" class="col-sm-3 text-end control-label col-form-label">
                            Age
                        </label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="lname"
                               class="col-sm-3 text-end control-label col-form-label">Weight</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Weight, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="email1"
                               class="col-sm-3 text-end control-label col-form-label">Gender</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="cono1"
                               class="col-sm-3 text-end control-label col-form-label">Contact No</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Phone_No, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="cono1"
                               class="col-sm-3 text-end control-label col-form-label">Address</label>
                        <div class="col-sm-5">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })

                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group row align-content-between">
                    <div class="card-body text-center">
                        <a class="col-sm-2  btn btn-warning btn-rounded " href="@Url.Action("Index","Patient")" style="color:black">Go Back</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>

<script>

    function save() {
        toastr.success('abc has been created', 'Patient Details for');
        setTimeout(nav, 2000);
    }

    function nav() {
        window.location.href = '@Url.Action("Index", "Patient")';
    }
</script>